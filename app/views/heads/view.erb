
<div class="head_page">

    <h2 class="head_page_title">Viewing Head </h2>
    <br>

    <h3 class="head_name"><%= @head.brand %> <%= @head.name %></h3>
    <img class="head_image" src='<%= @head.img %>' height="200" width="200">
    <p class="head_price">$<%= @head.price %></p>
    <div class="head_desc"> <p class="item description"><%= @head[:description] %></p></div>

    <div class="edit_delete">
        <form method="get" action="/heads/<%= h.id %>/edit">
            <input type="submit" value="Edit Head">
        </form>   
        <form method="post" action="/heads/<%= h.id %>/delete">
            <input id="hidden" type="hidden" name="_method" value="DELETE">
            <input type="submit" value="Delete Head">
        </form>
    </div>
</div>
